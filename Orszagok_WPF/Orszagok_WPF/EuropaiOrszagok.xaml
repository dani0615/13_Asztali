<Window x:Class="Orszagok_WPF.EuropaiOrszagok"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orszagok_WPF"
        mc:Ignorable="d"
        Title="EuropaiOrszagok" Height="450" Width="800"
        Loaded="Window_Loaded_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="391*"/>
        </Grid.RowDefinitions>
        <Label Content="Európai országok" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DataGrid Name="dgrEuropai" Grid.Row="1" Margin="30" ColumnWidth="*"  >
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Fájlba mentés" Name="FileMentes" Click="FileMentes_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
