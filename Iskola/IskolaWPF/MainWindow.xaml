<Window x:Class="IskolaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaWPF"
        mc:Ignorable="d"
        Title="IskolaWPF" Height="450" Width="300">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

       
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="15" >
            <ListBox x:Name="lbxTanulok"/>
        </StackPanel>

       
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button x:Name="btnTörlés" 
                    Content="Törlés" 
                    Margin="10" 
                    Width="100"
                    Click="btnTörlés_Click"/>
            <Button x:Name="btnAllomanyMentes" 
                    Content="Állomány mentése" 
                    Margin="10" 
                    Width="100"
                    Click="btnAllomanyMentes_Click"/>
        </StackPanel>
    </Grid>
</Window>