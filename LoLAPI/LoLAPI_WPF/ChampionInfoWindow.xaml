<Window x:Class="LoLAPI_WPF.ChampionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoLAPI_WPF"
        mc:Ignorable="d"
        Title="Champion Info" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="tbName" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"/>

        <Label Content="Title:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="tbTitle" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"/>

        <Label Content="Attack:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="tbAttack" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"/>

        <Label Content="Defense:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="tbDefense" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"/>

        <Label Content="Tags:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="tbTags" Grid.Row="4" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalContentAlignment="Center"/>

        <Button Content="Bezárás" Grid.Row="5" Grid.ColumnSpan="2" Width="100" Height="30" Margin="10" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>
