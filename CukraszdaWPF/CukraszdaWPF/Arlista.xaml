<Window x:Class="CukraszdaWPF.Arlista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Árlista" Height="550" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Árlista" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" FontFamily="Constantia" Foreground="Orange" Grid.ColumnSpan="2" FontWeight="Bold"/>
        <StackPanel Name="stpName" Grid.Row="1" Grid.Column="0" />
        <StackPanel x:Name="stpAmount" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="btnOrder" Content="Rendel" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="60" Click="btnOrder_Click" >
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Számlát kér"
                              Name="miBill"
                              Click="miBill_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>


    </Grid>
</Window>