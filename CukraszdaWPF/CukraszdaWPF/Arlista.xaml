<Window x:Class="CukraszdaWPF.Arlista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Árlista" Height="550" Width="700">
    <Grid>
        <Label Content="ÁRLISTA" 
               FontSize="40" 
               FontFamily="Comic Sans MS" 
               FontStyle="Italic"
               Foreground="Orange" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,10,0,0"/>

        <ScrollViewer Margin="20,80,20,100">
            <ItemsControl x:Name="icArlista" FontSize="18">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Height="60" Margin="0,5">
                            <CheckBox IsChecked="{Binding Kivalasztva}" 
                                      VerticalAlignment="Center" Margin="20,0"/>
                            <TextBlock Text="{Binding NevAr}" 
                                       VerticalAlignment="Center" 
                                       Margin="20,0" Width="300"/>
                            <TextBox Text="{Binding Adag}" 
                                     Width="80" 
                                     VerticalAlignment="Center" 
                                     TextAlignment="Center"
                                     Margin="20,0"/>
                            <TextBlock Text="adag" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,30,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Content="RENDEL" 
                FontSize="24" 
                Width="200" 
                Height="60" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,20"
                Click="Rendel_Click"/>
    </Grid>
</Window>