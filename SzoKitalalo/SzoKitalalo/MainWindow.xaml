<Window x:Class="SzoKitalalo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzoKitalalo"
        mc:Ignorable="d"
        Title="Kitalalo Game" Height="250" Width="300">
    <Grid Background="#FF1B81DC">
        <StackPanel Margin="15" >
            <Label Content="A kitalálandó szó:"/>
            <TextBox x:Name="tbxKitalalando" Margin="10 10 10 30" IsReadOnly="True"/>

            <StackPanel Orientation="Horizontal" >
                <Label Content="Sorszám:"/>
                <TextBox x:Name="tbxSorszam" Width="30" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" >
                <Label Content="Betű:"/>
                <TextBox x:Name="tbxBetu" Width="30"/>
            </StackPanel>

            <Button x:Name="btnTipp" Content="Tipp" Click="btnTipp_Click" HorizontalAlignment="Right" Margin="0 20 40 0" Width="50"  />
        </StackPanel>

    </Grid>
</Window>
