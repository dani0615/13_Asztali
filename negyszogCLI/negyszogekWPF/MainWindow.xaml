<Window x:Class="negyszogekWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:negyszogekWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dgrNegyszogek" Grid.Column="0" ColumnWidth="*" />
        <StackPanel Grid.Column="1" >
            <TextBox Grid.Column="1" Margin="5 10 5 10" Name="tbxA" />
            <TextBox Grid.Column="1"  Margin="5 10 5 10" Name="tbxB"  />
            <TextBox Grid.Column="1" Margin="5 10 5 10" Name="tbxC" />
            <TextBox Grid.Column="1" Margin="5 10 5 10" Name="tbxD" />
            <Button x:Name="btnHozzad" HorizontalAlignment="Center" Width="100" Height="20" Content="Hozzáad" Margin="5" Click="btnHozzad_Click" /> 

        </StackPanel>
       

    </Grid>
</Window>
