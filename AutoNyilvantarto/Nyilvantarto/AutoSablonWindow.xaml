<Window x:Class="Nyilvantarto.AutoSablonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyilvantarto"
        mc:Ignorable="d"
        Title="Autó Adatai" Height="450" Width="300" FontSize="16">
    <Grid>
        <StackPanel>
            <Label Content="Márka:"/>
            <TextBox Name="tbxMarka" Margin="10"/>
            <Label Content="Típus:"/>
            <TextBox Name="tbxTipus" Margin="10"/>
            <Label Content="Évjárat"/>
            <TextBox Name="tbxEvjarat" Margin="10"/>
            <Button x:Name="btnOK" Content="OK" Margin="10" Click="btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
