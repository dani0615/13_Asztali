<Window x:Class="Nyilvantarto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyilvantarto"
        mc:Ignorable="d"
        Title="Nyilvantartó" Height="450" Width="800" FontSize="16"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Menu>
            <MenuItem Header="_Fájl">
                <MenuItem Header="Új"/>
                <MenuItem Header="Megnyitás" Name="miOpen" Click="miOpen_Click" InputGestureText="Ctrl+O" />
                <Separator/>
                <MenuItem Header="Kilépés" />
            </MenuItem>
            <MenuItem Header="_Szerkesztés">
                <MenuItem Header="Másolás" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Beillesztés" InputGestureText="Ctrl+V"/>
            </MenuItem>
            <MenuItem Header="_Sugó">
                <MenuItem Header="Online Help" Name="miHelp" Click="miHelp_Click"/>
            </MenuItem>

        </Menu>
        <DataGrid x:Name="dgrAdatok" Margin="20" ColumnWidth="*"/>
        <StackPanel VerticalAlignment="Center" Grid.Column="1" >
            <Button Name="btnFelvetel" 
                    Content="Felvétel" 
                    Margin="0,10" 
                    HorizontalAlignment="Center" 
                    Click="btnFelvetel_Click">

                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="1"/>
                        <MenuItem Header="2">
                            <MenuItem Header="2.1"/>
                            <MenuItem Header="2.2"/>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>

            </Button>

            <Button Name="btnModositas" Content="Módosítás" Margin="0 10" HorizontalAlignment="Center" Click="btnModositas_Click"/>
            <Button x:Name="btnTorles" Content="Törlés" Margin="0 10" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >

                <Button x:Name="btnMentes" Content="Mentés" Margin="10 0" Click="btnMentes_Click" />
                <Button x:Name="btnBetöltés" Content="Betöltés" Margin="10 0" Click="btnBetöltés_Click" />
                
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
