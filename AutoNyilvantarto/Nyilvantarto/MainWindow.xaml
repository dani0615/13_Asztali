<Window x:Class="Nyilvantarto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyilvantarto"
        mc:Ignorable="d"
        Title="Nyilvantartó" Height="450" Width="800" FontSize="16"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgrAdatok" Margin="10" ColumnWidth="*"/>
        <StackPanel VerticalAlignment="Center" Grid.Column="1" >
            <Button Name="btnFelvetel" Content="Felvétel" Margin="0 10" HorizontalAlignment="Center" Click="btnFelvetel_Click"/>

            <Button Name="btnModositas" Content="Módosítás" Margin="0 10" HorizontalAlignment="Center" Click="btnModositas_Click"/>
            <Button x:Name="btnTorles" Content="Törlés" Margin="0 10" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >

                <Button x:Name="btnMentes" Content="Mentés" Margin="10 0" Click="btnMentes_Click" />
                <Button x:Name="btnBetöltés" Content="Betöltés" Margin="10 0" Click="btnBetöltés_Click" />
                
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
