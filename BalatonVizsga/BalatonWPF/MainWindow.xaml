<Window x:Class="BalatonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalatonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0" AutoGenerateColumns="True" Name="dgrLista" />
        <ComboBox Grid.Column="1" Name="cbxAdoSav" Height="30" VerticalAlignment="Top" Margin="10" />
        <StackPanel Grid.Column="2" >
            <Button Grid.Column="2" Name="btnModosit" Content="Módosít" Height="35" Margin="10,10,10,20" Click="btnModosit_Click"  />
            <Button x:Name="btnMentes" Grid.Column="2" Content="Mentés" Width="75" Height="35" Margin="10,10,10,20" Click="btnMentes_Click"/>
            <Button Name="btnModify" Content="Modify" Margin="10 20 10 10" Height="30" Click="btnModify_Click"/>

        </StackPanel>
       

    </Grid>
</Window>
