<Window x:Class="FutoversenyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutoversenyWPF"
        mc:Ignorable="d"
        Title="futóverseny" Height="500" Width="700">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Fájl">
                <MenuItem Header="Megnyit" Name="miFile" Click="miFile_Click" />
            </MenuItem>
            <MenuItem Header="Eredménylista" Name="miEredmeny" Click="miEredmeny_Click" />
        </Menu>

        <Border Grid.Row="1" BorderBrush="Maroon" BorderThickness="1" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Maratoni futóverseny" Foreground="Maroon" FontSize="24" FontWeight="Bold" Padding="10"/>
        </Border>

        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="RÉSZTVEVŐK" Margin="0,0,0,5"/>
                <ListBox Name="lbResztvevok" Height="250" SelectionChanged="lbResztvevok_SelectionChanged"/>
                <Button x:Name="btnAdat" Content="adatBe" Click="btnAdat_Click" Width="100" Margin="0,20,0,0" HorizontalAlignment="Left"/>
            </StackPanel>

            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Rajtszám" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="tbxRajtszam" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>

                <Label Content="ország" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="tbxOrszag" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>

                <Label Content="időeredmény" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="tbxIdo" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>

                <Label Content="életkor" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Name="tbxEletkor" Grid.Row="3" Grid.Column="1" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>

                <Button x:Name="btnBezar" Content="bezár" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnBezar_Click" Width="100" Margin="0,0,0,10"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
