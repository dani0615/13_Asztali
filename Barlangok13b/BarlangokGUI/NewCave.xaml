<Window x:Class="BarlangokGUI.NewCave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarlangokGUI"
        mc:Ignorable="d"
        Title="NewCave" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Azonosító: " Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Név :" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <Label Content="Hosszúság :" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <Label Content="Mélység :" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <Label Content="Település :" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Védettség :" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" />

        <TextBox Name="tbxAzon" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="tbxNev" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="tbxHosszusag" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="tbxMelyseg" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="tbxTelepules" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="tbxVedettseg" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
        <Button x:Name="btnMent" Content="Mentés" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Click="btnMent_Click" Width="100"/> 


    </Grid>
</Window>
